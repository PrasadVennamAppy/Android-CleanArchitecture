<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">


    <!-- Used for the ripple effect on touch -->
    <LinearLayout
        android:id="@+id/recipeHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipeImage"
            style="@style/RecipeImageStyle"
            android:layout_height="100dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3753431D">

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:freezesText="true"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorTextPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recipe_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipe_name"
                android:freezesText="true"
                android:padding="5dp"
                android:textColor="@color/colorTextPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recipe_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_category"
                android:freezesText="true"
                android:gravity="center|start"
                android:padding="3dp"
                android:textColor="@color/colorSecondary"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_baseline_add_circle_24"
                android:freezesText="true"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/add"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_baseline_remove_circle_24"
                android:freezesText="true"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/add"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>



